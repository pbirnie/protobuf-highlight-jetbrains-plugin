<idea-plugin>
    <id>com.jumpnotzerosoftware.protohighlight-jetbrains-plugin</id>
    <name>Protobuf Highlight</name>
    <version>0.10.3</version>
    <vendor url="https://github.com/pbirnie/protobuf-highlight-jetbrains-plugin" email="paul.birnie@jumpnotzerosoftware.com">Paul Birnie</vendor>

    <description><![CDATA[
        Highlight java code using the generated protobuf stubs <a href="https://developers.google.com/protocol-buffers/">Google Protobuf</a> within JetBrains products.
        <br>
        <br>
        Features:
        <ul>
            <li>Visually see which methods are part of the autogenerated protobuf stubs ie. Code using generated protobuf classes is highlighted</li>
            <li>Setting panel to specify which package generated protobuf classes can be found in</li>
        </ul>
        <br>
        <a href="https://github.com/pbirnie/protobuf-highlight-jetbrains-plugin/wiki/Roadmap">Roadmap</a>
        | <a href="https://github.com/pbirnie/protobuf-highlight-jetbrains-plugin/issues">Issue tracker</a>
        <br>
    ]]></description>

    <change-notes><![CDATA[

        <a href="https://github.com/pbirnie/protobuf-highlight-jetbrains-plugin/releases/tag/v0.10.3">
            <b>v0.10.3</b>
        </a> (2019-06-16)
        <br>
        <br>
        This release contains multiple fixes:
        <ul>
            <li>
              first version
            </li>
        </ul>

        <br>
        <a href="https://github.com/pbirnie/protobuf-highlight-jetbrains-plugin/releases">
            <b>Full Changelog</b>
        </a>
    ]]>
    </change-notes>

    <idea-version since-build="171"/>

    <depends>com.intellij.modules.lang</depends>

    <project-components>
        <component>
            <implementation-class>com.jumpnotzerosoftware.jetbrains.plugin.ProtoHighPluginController</implementation-class>
        </component>
        <component>
            <implementation-class>com.jumpnotzerosoftware.jetbrains.plugin.settings.ProtoHighSettings</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">

        <projectConfigurable instance="com.jumpnotzerosoftware.jetbrains.plugin.settings.ProtoHighSettingsConfigurable"/>

        <annotator
                language="JAVA"
                implementationClass="com.jumpnotzerosoftware.jetbrains.plugin.ProtoHighJavaSyntaxKeywordsAnnotator"/>


        <errorHandler
                implementation="com.jumpnotzerosoftware.jetbrains.plugin.errorreporting.SentryBugReporter"/>

    </extensions>

    <actions>
        <action id="ProtoErrorReporter.TriggerException"
                class="com.jumpnotzerosoftware.jetbrains.plugin.errorreporting.TriggerExceptionAction"
                text="Trigger Exception"
                description="Triggers an exception">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
